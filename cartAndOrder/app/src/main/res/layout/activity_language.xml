<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.LanguageActivity">

    <LinearLayout
        android:id="@+id/top_Language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/backIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_svgrepo_com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:paddingLeft="10dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_Language"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Suggested Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suggested"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <!-- Single RadioGroup for all RadioButtons -->
            <RadioGroup
                android:id="@+id/radioGroupLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_english_uk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English (UK)"
                    android:textSize="25dp"
                    android:padding="10dp"/>

                <RadioButton
                    android:id="@+id/rb_english_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English (US)"
                    android:textSize="25dp"
                    android:padding="10dp"/>
                <!-- Language Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioButton
                    android:id="@+id/rb_mandarin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mandarin"
                    android:textSize="25dp"
                    android:padding="10dp"/>

                <RadioButton
                    android:id="@+id/rb_hindi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hindi"
                    android:textSize="25dp"
                    android:padding="10dp"/>

                <RadioButton
                    android:id="@+id/rb_spanish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spanish"
                    android:textSize="25dp"
                    android:padding="10dp"/>

                <RadioButton
                    android:id="@+id/rb_french"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="French"
                    android:textSize="25dp"
                    android:padding="10dp"/>

                <RadioButton
                    android:id="@+id/rb_arabic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arabic"
                    android:textSize="25dp"
                    android:padding="10dp"/>

                <RadioButton
                    android:id="@+id/rb_rusian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rusian"
                    android:textSize="25dp"
                    android:padding="10dp"/>
                <RadioButton
                    android:id="@+id/rb_indonexia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indonexia"
                    android:textSize="25dp"
                    android:padding="10dp"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>